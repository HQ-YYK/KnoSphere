# ==================== LangSmith 配置 ====================
# LangSmith 可观测性平台
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=lsv2_pt_xxx_your_api_key_here
LANGCHAIN_PROJECT=KnoSphere-Production-2026
LANGCHAIN_ENVIRONMENT=production

# LangSmith 高级配置
LANGCHAIN_CALLBACKS_BACKGROUND=true  # 后台异步回调
LANGCHAIN_TRACING_SAMPLING_RATE=1.0  # 采样率（生产环境可设为0.1-0.5）

# ==================== LLM 成本监控 ====================
# OpenAI (DeepSeek) 成本跟踪
DEEPSEEK_MODEL_NAME=deepseek-chat
DEEPSEEK_COST_PER_1K_INPUT=0.00014  # $0.14 per 1M tokens
DEEPSEEK_COST_PER_1K_OUTPUT=0.00028  # $0.28 per 1M tokens

# Alibaba 成本跟踪 (备选)
ALIBABA_MODEL_NAME=qwen-max
ALIBABA_COST_PER_1K_INPUT=0.0004
ALIBABA_COST_PER_1K_OUTPUT=0.0008

# ==================== 性能监控阈值 ====================
PERFORMANCE_TTFT_THRESHOLD_MS=2000  # 首字延迟阈值（2秒）
PERFORMANCE_TOKEN_LIMIT=4000  # 单次请求token限制
PERFORMANCE_ERROR_RATE_THRESHOLD=0.05  # 错误率阈值（5%）

# ==================== 评估配置 ====================
# 自动评估模型（使用更强的模型作为裁判）
EVALUATION_MODEL_PROVIDER=openai  # 或 alibaba, azure
EVALUATION_MODEL=gpt-4o-mini  # 评估用模型

# 工具 API 配置
TAVILY_API_KEY=your_tavily_api_key_here
EXCHANGERATE_API_KEY=your_exchangerate_api_key_here

# n8n 配置
N8N_WEBHOOK_URL=http://localhost:5678/webhook
N8N_API_KEY=your_n8n_api_key_hereN8N_API_KEY=your_n8n_api_key_here

# JWT 配置
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 数据库配置
DATABASE_URL=postgresql://admin:knosphere_password@localhost:5432/knosphere

# Redis 配置
REDIS_URL=redis://localhost:6379/0

# AI 配置
OPENAI_API_KEY=your_openai_api_key_here
EMBEDDING_MODEL=text-embedding-3-small
DEEPSEEK_API_KEY=your_deepseek_api_key_here
ALIBABA_API_KEY=your_alibaba_api_key_here